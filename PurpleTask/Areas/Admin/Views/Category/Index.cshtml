@{
    ViewData["Title"] = "Index";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">

                <div class="card">
                    <div class="card-body">
                        <button type="button" class="btn btn-success btn-rounded btn-icon" asp-area="Admin" asp-controller="Category" asp-action="Create">
                            <i class="ti-plus"></i>
                        </button>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            Category Id
                                        </th>
                                        <th>
                                            Category Name
                                        </th>
                                        <th>
                                            Operations
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Category category in Model)
                                    {
                                        <tr>
                                            <td>
                                                @category.Id
                                            </td>

                                            <td>
                                                @category.Name
                                            </td>
                                            <td>
                                                <div class="template-demo">
                                                    <a type="button" class="btn btn-dark btn-icon-text" asp-controller="Category" asp-action="Update" asp-route-id=@category.Id>
                                                        Edit
                                                        <i class="ti-file btn-icon-append"></i>
                                                    </a>
                                                    <a type="button" id="delete" class="btn btn-success btn-icon-text" asp-controller="Category" asp-action="Delete" asp-route-id=@category.Id>
                                                        <i class="ti-trash btn-icon-prepend"></i>
                                                        Delete
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>

                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
